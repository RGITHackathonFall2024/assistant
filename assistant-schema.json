{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Assistant Response",
  "required": [
    "follow_up",
    "response",
    "function_calls"
  ],
  "properties": {
    "follow_up": {
      "type": "boolean",
      "title": "Follow Up",
      "description": "Indicates if a function response is expected"
    },
    "response": {
      "type": "array",
      "title": "Response Messages",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "title": "Текстовое сообщение",
            "description": "Базовое текстовое сообщение с поддержкой Markdown",
            "required": [
              "type",
              "text"
            ],
            "properties": {
              "type": {
                "type": "string",
                "description": "Указывает тип сообщения как карточка билета, всегда должно быть \"text\"",
                "title": "Type"
              },
              "text": {
                "type": "string",
                "description": "Текст в формате Markdown",
                "title": "Text"
              }
            }
          }
        ]
      }
    },
    "function_calls": {
      "type": "array",
      "title": "Function Calls",
      "items": {
        "type": "object",
        "required": [
          "namespace",
          "name",
          "args"
        ],
        "properties": {
          "namespace": {
            "type": "string",
            "enum": []
          },
          "name": {
            "type": "string",
            "enum": []
          },
          "args": {
            "type": "object"
          }
        }
      }
    }
  },
  "$defs": {
    "Текстовоесообщение": {
      "type": "object",
      "title": "Текстовое сообщение",
      "description": "Базовое текстовое сообщение с поддержкой Markdown",
      "required": [
        "type",
        "text"
      ],
      "properties": {
        "type": {
          "type": "string",
          "description": "Указывает тип сообщения как карточка билета, всегда должно быть \"text\"",
          "title": "Type"
        },
        "text": {
          "type": "string",
          "description": "Текст в формате Markdown",
          "title": "Text"
        }
      }
    }
  }
}