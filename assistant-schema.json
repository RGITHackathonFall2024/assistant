    },
    "response": {
      "type": "array",
      "title": "Response Messages",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "title": "Текстовое сообщение",
            "description": "Базовое текстовое сообщение с поддержкой Markdown",
            "required": [
              "type",
              "text"
            ],
            "properties": {
              "type": {
                "type": "string",
                "description": "Указывает тип сообщения как карточка билета, всегда должно быть \"text\"",
                "title": "Type"
              },
              "text": {
                "type": "string",
                "description": "Текст в формате Markdown",
                "title": "Text"
              }
            }
          },
          {
            "type": "object",
            "title": "Сообщение с билетом РЖД",
